<openerp>
    <data>
        <!-- Use the same layout for showing accessory products as the website_sale 
        module does for showing the alternative products -->    
        <template id="recommended_accessories" inherit_id="website_sale.recommended_products" customize_show="True" name="Recommended Accessories">
          <xpath expr="//div[1]" position="after">
              <div class="container mt32" t-if="product.accessory_product_ids">
                  <h3>Suggested accessories:</h3>
                  <div class='row mt16' style="margin-left: 15px !important;">
                  <t t-foreach="product.accessory_product_ids" t-as="product">
                      <div class='col-md-2 thumbnail' style='width: 170px; margin-right: 16px;'>
                          <div class='mt16 text-center'>
                              <span class="img-recommended-accessory" t-field="product.image_small" t-field-options='{"widget": "image", "class": "img-rounded shadow" }'/>
                              <h5>
                                  <a t-attf-href="/shop/product/#{ slug(product.product_tmpl_id) }" style="display: block">
                                      <span t-field='product.name' style="display: block"/>
                                  </a>
                              </h5>
                          </div>
                      </div>
                  </t>
                  </div>
              </div>
          </xpath>
        </template>
    </data>
</openerp>